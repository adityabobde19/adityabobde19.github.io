{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo" style="background-color: var(--global-footer-bg-color) !important; color: var(--global-footer-text-color) !important;">
    <div class="container mt-0" style="color: var(--global-footer-text-color) !important;">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}.
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo" style="background-color: var(--global-footer-bg-color) !important; color: var(--global-footer-text-color) !important;">
    {% if site.newsletter.enabled %}
      {% include scripts/newsletter.liquid %}
    {% endif %}
    <div class="container mt-0" style="color: var(--global-footer-text-color) !important;">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}.
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}
    </div>
  </footer>
{% endif %}
